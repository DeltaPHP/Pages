{% extends "layoutAdmin.twig" %}

{% block head %}
    {{ parent() }}
    {{ asset_js(["ckeditor/ckeditor.js"], default, true) }}
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('.ckeditor');
        });
    </script>
{% endblock head %}

{% block content %}
    <form class="form-horizontal" method="POST" enctype="multipart/form-data" action="{{ route_url("pages_save") }}">
        <fieldset>
            {% if item.id %}
                <input name="id" type="hidden" value="{{ item.id }}"/>
            {% endif %}

            <!-- Form Name -->
            <legend>{{ item ? "Edit" : "Add" }} Page {{ item.id ? "#" }}{{ item.id }}</legend>

            <div class="form-group">
                <label class="col-md-4 control-label" for="name">Name</label>
                <div class="col-md-8">
                    <input id="name" name="name" type="text" placeholder="Name" class="form-control input-md"
                           required="" value="{{ item.name }}">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="title">Title</label>
                <div class="col-md-8">
                    <input id="title" name="title" type="text" placeholder="Title" class="form-control input-md"
                           required="" value="{{ item.title }}">
                </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="description">Description</label>

                <div class="col-md-8">
                    <textarea class="form-control" id="description" name="description">{{ item.description }}</textarea>
                </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-5 control-label" for="text">Text</label>

                <div class="col-md-12">
                    <textarea class="form-control ckeditor" id="text" name="text" rows="60">{{ item.text }}</textarea>
                </div>
            </div>

            <!-- images -->
            <div class="form-group">
                <div class="col-md-4">
                    <p>Remove Images:</p>
                    <ul>
                        {% for image in item.images %}
                            <li>
                                <img src="{{ image.uri("thumb") }}" alt=""/>
                                <label class="checkbox-inline">
                                    <input type="checkbox" name="filesRm[]" value="{{ image.id }}">
                                </label>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <!-- File Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="files">New Images</label>
                <div class="row">
                    <div class="col-md-4" id="preview"></div>
                </div>
                <div class="col-md-4">
                    <input id="files" name="files[]" class="input-file" type="file" multiple accept="image">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 col-md-offset-4">
                    <a href="/admin/articles" class="btn btn-warning"><span class="glyphicon glyphicon-backward"></span>
                        Back</a>
                    <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-save"></span> Save
                    </button>
                </div>
            </div>

        </fieldset>
    </form>

{% endblock %}
