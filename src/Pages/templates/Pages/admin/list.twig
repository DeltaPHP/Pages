{% extends "layoutAdmin.twig" %}

{% block content %}
    <h1>Страницы ({{ countItems }})</h1>
    <div>
        {% for item in items %}
            <div>
                <h2>{{ item.title }} <sup>{{ item.id }}</sup></h2>

                <p>{{ item.text|striptags|raw|cutStr(500) }}...</p>

                <a href="/admin/pages/edit/{{ item.id }}" class="btn btn-sm btn-warning"><span class="glyphicon glyphicon-edit"></span></a>
                <a href="/admin/pages/rm/{{ item.id }}" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-remove"></span></a>
            </div>
            <br/>
        {% endfor %}

        {#paginator#}
        <div>
            <ul class="pagination">
                {% if showFirstPage %}
                    <li><a href="/admin/articles">&laquo;</a></li>
                {% endif %}
                {% for page in pages %}
                    <li class="{% if page.active %}active{% endif %}"><a href="/admin/articles?p={{ page.id }}">{{ page.id }}</a></li>
                {% endfor %}
                {% if showLastPage %}
                    <li><a href="/admin/articles?p={{ countPages }}">&raquo;</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
    <a href="/admin/pages/add" class="btn btn-lg btn-success"><span class="glyphicon glyphicon-file"></span> Add New</a>
{% endblock %}